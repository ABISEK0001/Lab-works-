        "from collections import deque\n",
        "\n",
        "def bfs(graph, start):\n",
        "    if start not in graph:\n",
        "        print(f\"Error: Start node '{start}' not found in the graph.\")\n",
        "        return [], {}\n",
        "\n",
        "    visited = set()          # To keep track of visited nodes\n",
        "    queue = deque([(start, 0)])   # Queue stores (node, distance)\n",
        "    traversal_path = []      # To store the order of visited nodes\n",
        "    distances = {node: -1 for node in graph} # To store distances, -1 means unvisited\n",
        "\n",
        "    visited.add(start)\n",
        "    distances[start] = 0\n",
        "    traversal_path.append(start)\n",
        "\n",
        "    while queue:\n",
        "        node, dist = queue.popleft()\n",
        "\n",
        "        # Add all unvisited neighbors to the queue\n",
        "        for neighbor in graph[node]:\n",
        "            if neighbor not in visited:\n",
        "                visited.add(neighbor)\n",
        "                distances[neighbor] = dist + 1\n",
        "                traversal_path.append(neighbor)\n",
        "                queue.append((neighbor, dist + 1))\n",
        "\n",
        "    return traversal_path, distances\n",
        "\n",
        "# Graph representation using adjacency list\n",
        "graph = {\n",
        "    'A': ['B', 'C'],\n",
        "    'B': ['A', 'D', 'E'],\n",
        "    'C': ['A', 'F'],\n",
        "    'D': ['B'],\n",
        "    'E': ['B', 'F'],\n",
        "    'F': ['C', 'E']\n",
        "}\n",
        "\n",
        "# Call BFS starting from node 'A'\n",
        "path, dists = bfs(graph, 'A')\n",
        "print(\"BFS Traversal Path:\", path)\n",
        "print(\"Shortest Distances from A:\", dists)\n",
        "\n",
        "# Example for a node not in graph\n",
        "path_invalid, dists_invalid = bfs(graph, 'Z')\n"
      ]
    }
  ]
}